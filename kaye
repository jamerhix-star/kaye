    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');
            const questionSection = document.getElementById('questionSection');
            const resultSection = document.getElementById('resultSection');
            const sadCatContainer = document.getElementById('sadCatContainer');
            const convinceContainer = document.getElementById('convinceContainer');
            const convinceGifs = document.getElementById('convinceGifs');
            const noCounter = document.getElementById('noCounter');
            const flowersContainer = document.querySelector('.flowers-container');
            
            let noClickCount = 0;
            let isMoving = false;
            
            // Array of cute convincing GIFs (more will be shown with each NO)
            const convinceGifList = [
                "https://media.giphy.com/media/11s7Ke7jcNxCHS/giphy.gif",
                "https://media.giphy.com/media/5xtDarInUxbT3kbDk9a/giphy.gif",
                "https://media.giphy.com/media/VbnUQpnihPSIgIXuZv/giphy.gif",
                "https://media.giphy.com/media/l0MYt5jPR6QX5pnqM/giphy.gif",
                "https://media.giphy.com/media/C9x8gX02SnMIoAClXa/giphy.gif",
                "https://media.giphy.com/media/yFQ0ywscgobJK/giphy.gif",
                "https://media.giphy.com/media/3o7TKsQ8gTp3WqXqjq/giphy.gif",
                "https://media.giphy.com/media/26tknCqiJrBQG6DrC/giphy.gif",
                "https://media.giphy.com/media/13CoXDiaCcCoyk/giphy.gif",
                "https://media.giphy.com/media/8vQSQ3cNXu3Go/giphy.gif",
                "https://media.giphy.com/media/3o6Zt6ML6BklcajjsA/giphy.gif",
                "https://media.giphy.com/media/l0HU7JIWtZ8j5nDg4/giphy.gif"
            ];
            
            // Create more orange tulips (15 tulips)
            function createTulips() {
                flowersContainer.innerHTML = '';
                const tulipCount = 15;
                
                for (let i = 0; i < tulipCount; i++) {
                    const tulip = document.createElement('div');
                    tulip.className = 'tulip';
                    
                    // Random horizontal position
                    const leftPosition = (i / tulipCount) * 100;
                    
                    // Random animation delay
                    const animationDelay = Math.random() * 2;
                    
                    tulip.style.left = `${leftPosition}%`;
                    tulip.style.animationDelay = `${animationDelay}s`;
                    
                    tulip.innerHTML = `
                        <div class="stem"></div>
                        <div class="petal"></div>
                        <div class="leaf"></div>
                    `;
                    
                    flowersContainer.appendChild(tulip);
                }
            }
            
            // Initialize tulips
            createTulips();
            
            // Function to generate random position for the No button
            function getRandomPosition(button) {
                const container = document.querySelector('.container');
                const containerRect = container.getBoundingClientRect();
                const buttonRect = button.getBoundingClientRect();
                
                // Calculate max positions to keep button within container
                const maxX = containerRect.width - buttonRect.width - 60;
                const maxY = containerRect.height - buttonRect.height - 60;
                
                // Generate random positions
                const randomX = Math.floor(Math.random() * maxX);
                const randomY = Math.floor(Math.random() * maxY);
                
                return { x: randomX, y: randomY };
            }
            
            // Function to move button to random position
            function moveButton(button) {
                if (isMoving) return;
                
                isMoving = true;
                const newPos = getRandomPosition(button);
                
                // Apply transition for smooth movement
                button.style.transition = 'all 0.6s ease';
                button.style.position = 'absolute';
                button.style.left = `${newPos.x}px`;
                button.style.top = `${newPos.y}px`;
                
                // Add a little rotation for fun
                const rotate = Math.random() * 20 - 10;
                button.style.transform = `rotate(${rotate}deg)`;
                
                // Reset transition after movement
                setTimeout(() => {
                    button.style.transition = '';
                    isMoving = false;
                }, 600);
            }
            
            // Function to add convincing GIFs
            function addConvinceGifs(count) {
                convinceGifs.innerHTML = '';
                
                // Show more GIFs based on how many times Kaye said no
                const gifsToShow = Math.min(count * 2, convinceGifList.length);
                
                for (let i = 0; i < gifsToShow; i++) {
                    const gif = document.createElement('img');
                    gif.className = 'convince-gif';
                    gif.src = convinceGifList[i];
                    gif.alt = `Cute convince gif ${i+1}`;
                    gif.style.animationDelay = `${i * 0.2}s`;
                    
                    convinceGifs.appendChild(gif);
                }
            }
            
            // Yes button click handler
            yesBtn.addEventListener('click', function() {
                // Show result section with animation
                questionSection.classList.add('hidden');
                resultSection.classList.remove('hidden');
                noCounter.classList.add('hidden');
                
                // Add floating hearts animation
                for (let i = 0; i < 30; i++) {
                    createHeart();
                }
                
                // Play a little celebration animation
                yesBtn.style.animation = 'bounce 0.5s 3';
                
                // Update the counter to show "YES!"
                noCounter.textContent = "YES!";
                noCounter.style.background = 'linear-gradient(45deg, #4CAF50, #8BC34A)';
                noCounter.classList.remove('hidden');
            });
            
            // No button click handler
            noBtn.addEventListener('click', function() {
                noClickCount++;
                
                // Update and show the counter
                noCounter.textContent = noClickCount;
                noCounter.style.background = 'linear-gradient(45deg, #f44336, #FF9800)';
                noCounter.classList.remove('hidden');
                
                // Move the No button to random position
                moveButton(noBtn);
                
                // Show sad cat gif after first click
                if (noClickCount === 1) {
                    sadCatContainer.classList.remove('hidden');
                    convinceContainer.classList.remove('hidden');
                }
                
                // Add more convincing GIFs with each click
                addConvinceGifs(noClickCount);
                
                // Increase font size of Yes button with each No click
                const currentSize = parseInt(window.getComputedStyle(yesBtn).fontSize);
                yesBtn.style.fontSize = `${currentSize + 3}px`;
                
                // Make the Yes button grow larger and more enticing
                const scale = 1 + (noClickCount * 0.05);
                yesBtn.style.transform = `scale(${scale})`;
                
                // Change No button text based on click count
                const noTexts = [
                    "No üò¢", 
                    "Are you sure, Kaye? ü•∫", 
                    "Please say yes! üíî", 
                    "I'll be heartbroken! üò≠", 
                    "Think about it, Kaye! üòû",
                    "Pretty please with tulips? üå∑",
                    "I'll be the saddest without you! ü•∫",
                    "Just one chance? üíñ",
                    "You're breaking my heart! üíî",
                    "I made all these tulips for you! üå∑",
                    "I have more cute cats! üê±",
                    "Last try before I cry! üò≠",
                    "Okay, I'll accept defeat... üòî",
                    "Just kidding, try again! üòâ"
                ];
                
                const textIndex = Math.min(noClickCount - 1, noTexts.length - 1);
                noBtn.textContent = noTexts[textIndex];
                
                // After many no's, make the yes button pulse
                if (noClickCount >= 5) {
                    yesBtn.style.animation = 'pulse 1s infinite';
                }
                
                // Add more floating hearts with each no (to make it more romantic)
                for (let i = 0; i < noClickCount * 2; i++) {
                    setTimeout(() => createHeart(), i * 100);
                }
            });
            
            // Create floating hearts animation
            function createHeart() {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§Ô∏è';
                heart.classList.add('heart');
                
                // Random position
                const startX = Math.random() * window.innerWidth;
                const startY = window.innerHeight + 50;
                
                heart.style.left = `${startX}px`;
                heart.style.top = `${startY}px`;
                
                // Random size
                const size = Math.random() * 25 + 20;
                heart.style.fontSize = `${size}px`;
                
                // Random animation duration
                const duration = Math.random() * 5 + 5;
                heart.style.animationDuration = `${duration}s`;
                
                // Random color for some hearts
                if (Math.random() > 0.7) {
                    heart.style.color = '#FF9800'; // Orange hearts
                } else if (Math.random() > 0.5) {
                    heart.style.color = '#FF4081'; // Pink hearts
                }
                
                document.body.appendChild(heart);
                
                // Remove heart after animation completes
                setTimeout(() => {
                    if (heart.parentNode) {
                        heart.remove();
                    }
                }, duration * 1000);
            }
            
            // Add some initial floating hearts
            for (let i = 0; i < 8; i++) {
                setTimeout(() => createHeart(), i * 400);
            }
            
            // Add a personalized message in the console
            console.log("%cüíù For Kaye üíù", "color: #ff4081; font-size: 24px; font-weight: bold;");
            console.log("%cYou are special and amazing! Hope you like this Valentine's surprise! üå∑", "color: #FF9800; font-size: 16px;");
        });
    </script>
</body>
</html>
