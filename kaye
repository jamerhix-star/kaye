    <div class="container">
        <!-- No Counter -->
        <div id="noCounter" class="counter hidden">0</div>
        
        <!-- Initial Question Section -->
        <div id="questionSection" class="question-container">
            <h1>For My Dearest <span class="name-highlight">Kaye</span> üíñ</h1>
            <div class="question">My Sweet Kaye, will you be my Valentine? üåπ</div>
            
            <div class="buttons">
                <button id="yesBtn">YES! I'd Love To! üíù</button>
                <button id="noBtn">No üò¢</button>
            </div>
            
            <div id="sadCatContainer" class="hidden">
                <img class="sad-cat" src="https://media.giphy.com/media/l3q2K5jinAlChoCLS/giphy.gif" alt="Sad cat gif">
                <p style="color: #f44336; font-size: 1.8rem; margin-top: 20px;">Oh no Kaye! Please say yes! ü•∫</p>
            </div>
            
            <!-- Convince Section - Shows more GIFs each time Kaye says no -->
            <div id="convinceContainer" class="convince-container hidden">
                <div class="convince-title">Please Kaye, I really want to be your Valentine! ü•∞</div>
                <div id="convinceGifs" class="convince-gifs">
                    <!-- GIFs will be added here dynamically -->
                </div>
